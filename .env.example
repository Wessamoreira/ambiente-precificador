# =====================================================
# PRECIFICAPRO - Variáveis de Ambiente
# Copie este arquivo para .env e preencha os valores
# =====================================================

# ----- BANCO DE DADOS (OBRIGATÓRIO) -----
DB_HOST=localhost
DB_PORT=5432
DB_NAME=precificapro_db
DB_USERNAME=postgres_user
DB_PASSWORD=<INSIRA_UMA_SENHA_FORTE_AQUI>

# ----- SEGURANÇA (OBRIGATÓRIO) -----
# Gere uma chave segura com: openssl rand -base64 32
JWT_SECRET_KEY=<INSIRA_UMA_CHAVE_SECRETA_AQUI_MINIMO_32_CARACTERES>
JWT_EXPIRATION_MS=3600000
JWT_REFRESH_EXPIRATION_MS=86400000

# ----- SERVIDOR -----
SERVER_PORT=8080

# ----- EXTERNAL APIs (OPCIONAL) -----
GEMINI_API_KEY=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ----- GOOGLE DRIVE BACKUP (OPCIONAL) -----
GOOGLE_DRIVE_CREDENTIALS_JSON=
GOOGLE_DRIVE_BACKUP_FOLDER_ID=

# ----- CORS -----
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ----- SPRING PROFILE -----
SPRING_PROFILES_ACTIVE=dev

# ----- RATE LIMITING -----
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_DURATION=60
