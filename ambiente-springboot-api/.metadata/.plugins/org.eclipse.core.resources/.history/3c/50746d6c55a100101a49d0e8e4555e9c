package com.precificapro.controller.dto;

import java.math.BigDecimal;

public record SimulationResponseDTO(
        BigDecimal suggestedPrice, // Preço de Venda Sugerido
        BigDecimal directCostUnit, // Custo Direto Unitário
        BigDecimal indirectCostUnit, // Custo Indireto Unitário (Rateio)
        BigDecimal totalCostUnit, // Custo Total Unitário
        BigDecimal contributionMarginUnit, // Margem de Contribuição Unitária
        Integer breakEvenUnits, // Ponto de Equilíbrio em Unidades
        MonthlyProjectionDTO monthlyProjection
) {
    public record MonthlyProjectionDTO(
        BigDecimal revenue, // Faturamento
        BigDecimal totalDirectCost, // Custo Direto Total
        BigDecimal totalIndirectCost, // Custo Indireto Total
        BigDecimal netProfit // Lucro Líquido
    ) {}
}