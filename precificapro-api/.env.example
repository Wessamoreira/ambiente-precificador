# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=precificapro_db
DB_USERNAME=postgres_user
DB_PASSWORD=your_super_secret_password_here

# JWT Configuration
JWT_SECRET_KEY=generate_a_strong_random_secret_key_minimum_64_characters_here
JWT_EXPIRATION_MS=3600000
JWT_REFRESH_EXPIRATION_MS=86400000

# External APIs
GEMINI_API_KEY=your_gemini_api_key_here
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Application Configuration
SERVER_PORT=8080

# Google Drive Backup Configuration
# Get your credentials from: https://console.cloud.google.com/
GOOGLE_DRIVE_CREDENTIALS_JSON={"web":{"client_id":"YOUR_CLIENT_ID","project_id":"YOUR_PROJECT_ID","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_secret":"YOUR_CLIENT_SECRET"}}

GOOGLE_DRIVE_BACKUP_FOLDER_ID=your_google_drive_folder_id
BACKUP_RETENTION_DAYS=30
BACKUP_AUTOMATIC_ENABLED=true
BACKUP_AUTOMATIC_CRON=0 0 3 * * *


